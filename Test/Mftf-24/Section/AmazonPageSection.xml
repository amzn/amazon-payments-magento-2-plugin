<?xml version="1.0" encoding="UTF-8"?>
<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/sectionObjectSchema.xsd">
    <section name="AmazonPageSection">
        <element name="emailField" type="input" selector="#ap_email"/>
        <element name="passwordField" type="input" selector="#ap_password"/>
        <element name="signInButton" type="button" selector="#signInSubmit"/>
        <element name="checkoutButton" type="button" selector="#default-button-content input[type=submit]"/>
        <element name="continueButton" type="button" selector="#maxo_consent input[type=submit]"/>
        <element name="cancelButton" type="button" selector="#return_back_to_merchant_link"/>
        <element name="loginCancelButton" type="button" selector="#consent-wrapper-content [data-action='cancel-consent'] a"/>
        <element name="addressId" type="text" selector="#default .default_address .address_id"/>
        <element name="addressDetails" type="text" selector="#change-buyer-details li[data-address_id='{{address_id}}']" parameterized="true"/>
        <element name="changeAddressButton" type="button" selector="#change-address-button"/>
        <element name="addressBackButton" type="button" selector="#addresses-back-button"/>
        <element name="changePaymentButton" type="button" selector="#change-payment-button"/>
        <element name="notSelectedAddress" type="button" selector="#maxo_addresses li[data-selected=false]"/>
        <element name="useAddressButton" type="button" selector="#buyer-action-button-bottom .a-button-input"/>
        <element name="paymentMethodRadioButton" type="input" selector="li[data-trail_number='{{cc}}']" parameterized="true"/>
        <element name="usePaymentButton" type="button" selector="#maxo_payment_methods #buyer-action-button-bottom .a-button-input"/>
    </section>
</sections>
