        <service class="Amazon\Pay\Api\Spc\AddressInterface" method="saveAddress" />
        <resources>
            <resource ref="Amazon_Pay::spc" />
        </resources>
    </route>
    <route url="/V1/amazon-spc/v1/cart/:cartId/coupon" method="POST">
        <service class="Amazon\Pay\Api\Spc\CouponInterface" method="applyCoupon" />
        <resources>
            <resource ref="Amazon_Pay::spc" />
        </resources>
    </route>
    <route url="/V1/amazon-spc/v1/cart/:cartId/shipping-method" method="POST">
        <service class="Amazon\Pay\Api\Spc\ShippingMethodInterface" method="shippingMethod" />
        <resources>
            <resource ref="Amazon_Pay::spc" />
        </resources>
    </route>
    <route url="/V1/amazon-spc/v1/cart/:cartId/order" method="POST">
        <service class="Amazon\Pay\Api\Spc\OrderInterface" method="createOrder" />
        <resources>
            <resource ref="Amazon_Pay::spc" />
        </resources>
